<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="seantis.dir.events"
      tal:omit-tag="" lang="en" xml:lang="en">
  <head>
  </head>

  <body>

    <metal:define define-macro="event-test">
      <div class="event-view">
        <b tal:content="python: id(occurrence)"></b>
      </div>
    </metal:define>

    <metal:define define-macro="event-detail">
      <div tal:define="
        o python: occurrence;
        is_recurring python: o.recurrence and True or False;
      " class="event-view">
        <div class="event-head">
          <div class="event-title">
            <h2>
              <tal:block content="o/title" />
            </h2>

            <div class="event-date"><span tal:content="python: o.human_date(request)"></span> <span tal:content="python: o.human_daterange(request)"></span></div>
          </div>

          <div class="event-image" tal:condition="o/image">
            <a tal:attributes="href string:${o/absolute_url}/@@images/image">
              <img tal:replace="structure o/@@images/image/mini" />
            </a>
          </div>

          <div class="descriptions">
            <div class="short" tal:content="o/short_description"></div>
            <div class="long" tal:content="o/long_description"></div>
            <div class="eventtags-list">
              <tal:block repeat="category python: o.categories()[:2]">
                <div class="eventtags" tal:condition="python: category[2]" tal:content="python: ', '.join(category[2])"></div>
              </tal:block>
            </div>
          </div>

          <div class="visualClear"></div>
        </div>

        <div class="event-details">
          <div class="location" tal:condition="python: any((o.locality, o.street, o.housenumber, o.zipcode, o.town))">
            <h3 i18n:translate="">Locality</h3>
            <div class="locality" tal:content="o/locality"></div>
            <div class="street">
              <span tal:content="o/street"></span>
              <span tal:content="o/housenumber"></span>
            </div>
            <div class="town">
              <span tal:content="o/zipcode"></span>
              <span tal:content="o/town"></span>
            </div>
          </div>

          <div class="organizer" tal:condition="python: any((o.organizer, o.event_url, o.contact_name, o.contact_email, o.contact_phone))">
            <h3 i18n:translate="">Organizer</h3>
            <div class="name" tal:content="o/organizer"></div>
            <div class="event_url" tal:condition="o/event_url">
              <a i18n:translate="" tal:attributes="href o/event_url">Event Website</a>
            </div>
            <div class="contact">
              <div class="name" tal:content="o/contact_name"></div>
              <div class="email" tal:condition="o/contact_email">
                <a tal:content="o/contact_email" tal:attributes="href python: 'mailto:' + o.contact_email"></a>
              </div>
              <div class="phone" tal:content="o/contact_phone"></div>
            </div>
          </div>

          <div class="ticket" tal:condition="python: any((o.registration, o.prices))">
            <h3 i18n:translate="">Ticket</h3>
            <div class="registration">
              <a tal:attributes="href o/registration" i18n:translate="">Ticket / Registration Website</a>
            </div>
            <div class="prices">
              <tal:block replace="structure python: o.prices.replace('\n', '<br />')"></tal:block>
            </div>
          </div>

          <div class="attachments" tal:condition="python: any((o.attachment_1, o.attachment_2))">
            <h3 i18n:translate="">Attachments</h3>
            <ul>
              <li tal:condition="o/attachment_1">
                <a class="attachment" tal:attributes="href string:${o/absolute_url}/@@download/attachment_1; title o/attachment_1/filename" tal:content="python: view.attachment_filename('attachment_1')"></a>
              </li>
              <li tal:condition="o/attachment_2">
                <a class="attachment" tal:attributes="href string:${o/absolute_url}/@@download/attachment_2; title o/attachment_2/filename" tal:content="python: view.attachment_filename('attachment_2')"></a>
              </li>
            </ul>
          </div>

          <div class="calendars" tal:condition="python: not is_preview">
            <h3 i18n:translate="">Calendars (iCal)</h3>
            <ul tal:condition="is_recurring">
              <li>
                <a tal:attributes="href python: view.ical_url(only_this=False)" i18n:translate="">Calendar for all occurrences of this event</a>
              </li>
              <li>
                <a tal:attributes="href python: view.ical_url(only_this=True)" i18n:translate="">Calendar for this occurrence only</a>
              </li>
            </ul>
            <ul tal:condition="python: not view.is_recurring">
              <li>
                <a tal:attributes="href python: view.ical_url(only_this=False)" i18n:translate="">Calendar for this event</a>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </metal:define>

  </body>
</html>
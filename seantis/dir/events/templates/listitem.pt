<div xmlns="http://www.w3.org/1999/xhtml"
   xmlns:tal="http://xml.zope.org/namespaces/tal"
   xmlns:i18n="http://xml.zope.org/namespaces/i18n" i18n:domain="seantis.dir.events"
   xml:lang="en"
   lang="en">

  <div class="directoryInfoText">
    <div class="events">
        <h3><a 
          tal:attributes="href context/absolute_url; id context/id" 
          tal:content="context/title">
        </a></h3>
        <div class="documentDescription" tal:content="context/short_description"></div>
        <tal:block repeat="category python: context.categories()">
        <div tal:condition="python: category[2]" tal:content="python: ', '.join(category[2])"></div>
        </tal:block>
    </div>
  </div>
</div>